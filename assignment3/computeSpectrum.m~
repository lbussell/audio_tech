function [f, XAbs, XPhase, XRe, XIm] = computeSpectrum(x, sampleRateInHz)

    lengthX = length(x);
    numberOfSeconds = ceil(lengthX/sampleRateInHz);
    numberOfSamples = numberOfSeconds*sampleRateInHz;
    
    ft = fft(x); % take the fft of the signal
    ft = ft(1:numberOfSamples/2); % get rid of redundant half
    
    f = (0:numberOfSamples/2-1)*sampleRateInHz/numberOfSamples;
    XRe = real(ft);
    XIm = imag(ft);
    XAbs = abs(ft);
    XPhase = angle(ft);
    
end